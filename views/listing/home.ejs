<% layout("/layout/boilerplate") %>
<h3 class="mt-4 mb-4">All Listings</h3>
<div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
  <%for(let list of listing) { %>
  <a href="/listings/<%= list._id %>" class="list-link">
    <div class="col">
      <div class="card listing-card" style="width: 20rem">
        <img
          class="card-img-top"
          src="<%= list.image.url %>"
          alt="Listing image"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= list.title %></b><br />
            &#8377;<%= list.price.toLocaleString('en-IN') %>/night
          </p>
        </div>
      </div>
    </div>
  </a>
  <% } %>
</div>
