<% layout("/layout/boilerplate") %>

<form id="filterForm" action="/listings" method="get">
  <div class="d-flex flex-wrap justify-content-center">
    <div class="mx-3 mt-4 text-center filter" onclick="filterByCategory('All')">
      <i class="fa-solid fa-fire"></i>
      <p>Trending</p>
    </div>
    <div
      class="mx-3 mt-4 text-center filter"
      onclick="filterByCategory('Rooms')"
    >
      <i class="fa-solid fa-bed"></i>
      <p>Rooms</p>
    </div>
    <div
      class="mx-3 mt-4 text-center filter"
      onclick="filterByCategory('Iconic Cities')"
    >
      <i class="fa-solid fa-city"></i>
      <p>Iconic Cities</p>
    </div>
    <div
      class="mx-3 mt-4 text-center filter"
      onclick="filterByCategory('Mountains')"
    >
      <i class="fa-solid fa-mountain"></i>
      <p>Mountains</p>
    </div>
    <div
      class="mx-3 mt-4 text-center filter"
      onclick="filterByCategory('Castles')"
    >
      <i class="fa-brands fa-fort-awesome"></i>
      <p>Castles</p>
    </div>
    <div
      class="mx-3 mt-4 text-center filter"
      onclick="filterByCategory('Amazing Pool')"
    >
      <i class="fa-solid fa-person-swimming"></i>
      <p>Amazing Pool</p>
    </div>
    <div
      class="mx-3 mt-4 text-center filter"
      onclick="filterByCategory('Camping')"
    >
      <i class="fa-solid fa-tree"></i>
      <p>Camping</p>
    </div>
    <div
      class="mx-3 mt-4 text-center filter"
      onclick="filterByCategory('Farms')"
    >
      <i class="fa-solid fa-cow"></i>
      <p>Farms</p>
    </div>
    <div
      class="mx-3 mt-4 text-center filter"
      onclick="filterByCategory('Arctic')"
    >
      <i class="fa-solid fa-snowflake"></i>
      <p>Arctic</p>
    </div>
  </div>
  <input type="hidden" id="categoryInput" name="filter" value="" />
</form>

<div class="d-flex justify-content-between align-items-center container-fluid">
  <% if(heading) {%>
  <h3 class="mt-4 mb-4"><%= heading %></h3>
  <% } else { %>
  <h3 class="mt-4 mb-4">All Listings</h3>
  <% } %>
  <div class="tax-toggle">
    <div class="form-check form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="flexSwitchCheckDefault"
      />
      <label class="form-check-label" for="flexSwitchCheckChecked"
        >Show Taxes on List</label
      >
    </div>
  </div>
</div>

<div
  class="w-100 row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 d-flex justify-content-center"
>
  <%for(let list of listing) { %>
  <a href="/listings/<%= list._id %>" class="list-link">
    <div class="col">
      <div class="card listing-card" style="width: 18rem">
        <img
          class="card-img-top"
          src="<%= list.image.url %>"
          alt="Listing image"
          style="height: 17rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= list.title %></b><br />
            &#8377;<%= list.price.toLocaleString('en-IN') %>/night
            <i class="taxes"> &nbsp; &nbsp; +18% GST</i>
          </p>
        </div>
      </div>
    </div>
  </a>
  <% } %>
</div>
